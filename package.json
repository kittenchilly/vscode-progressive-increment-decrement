{
    "name": "vscode-progressive-increment",
    "displayName": "VSCode Progressive Increment",
    "description": "Increments progressively integer values found in selection(s) by 1 or 10",
    "version": "1.0.5",
    "publisher": "narsenico",
    "icon": "icon.png",
    "engines": {
        "vscode": "^1.70.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/narsenico/vscode-progressive-increment.git"
    },
    "bugs": {
        "url": "https://github.com/narsenico/vscode-progressive-increment/issues",
        "email": "not_amon-dev@yahoo.it"
    },
    "categories": [
        "Formatters",
        "Other"
    ],
    "activationEvents": [
        "onCommand:progressive.incrementBy1",
        "onCommand:progressive.incrementBy10",
        "onCommand:progressive.incrementByInput"
    ],
    "license": "MIT",
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "progressive.incrementBy1",
                "title": "Progressive: increment by 1"
            },
            {
                "command": "progressive.incrementBy10",
                "title": "Progressive: increment by 10"
            },
            {
                "command": "progressive.incrementByInput",
                "title": "Progressive: increment by ..."
            }
        ],
        "keybindings": [
            {
                "command": "progressive.incrementBy1",
                "key": "ctrl+alt+i",
                "mac": "cmd+alt+i",
                "when": "editorTextFocus"
            },
            {
                "command": "progressive.incrementBy10",
                "key": "ctrl+alt+shift+i",
                "mac": "cmd+alt+shift+i",
                "when": "editorTextFocus"
            }
        ],
        "configuration": {
            "title": "VSCode Progressive Increment",
            "properties": {
                "progressive.skipFirstNumber": {
                    "type": "boolean",
                    "default": false,
                    "description": "Skip first number in selection"
                },
                "progressive.allowZeroLengthSelection": {
                    "type": "boolean",
                    "default": false,
                    "description": "Allow increment of number before or after the cursor in case of zero length selection"
                }
            }
        }
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node test/runTest.js",
        "vsce:package": "vsce package",
        "vsce:publish": "vsce publish"
    },
    "devDependencies": {
        "@types/vscode": "^1.70.0",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "16.x",
        "eslint": "^8.20.0",
        "glob": "^8.0.3",
        "mocha": "^10.0.0",
        "typescript": "^4.7.4",
        "@vscode/test-electron": "^2.1.5"
    }
}
